# Usa una imagen base de Node.js
FROM node:14 AS build

# Establece el directorio de trabajo
WORKDIR /app

# Copia los archivos de la aplicaci贸n
COPY package.json package-lock.json ./
RUN npm install

# Copia el resto de la aplicaci贸n
COPY . .

# Compila la aplicaci贸n
RUN npm run build --prod

# Usa una imagen base de Nginx para servir la aplicaci贸n
FROM nginx:alpine
COPY --from=build /app/dist/tu-nombre-de-aplicacion /usr/share/nginx/html

# Exponer el puerto 80
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
